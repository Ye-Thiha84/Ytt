---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <slot />
    
    <button class="theme-toggle" aria-label="Toggle theme" title="Toggle light/dark mode">
      <svg class="moon-icon" viewBox="0 0 24 24">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" fill="currentColor"/>
      </svg>
      <svg class="sun-icon" viewBox="0 0 24 24">
        <circle cx="12" cy="12" r="5" fill="currentColor"/>
        <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" stroke="currentColor" stroke-width="2"/>
      </svg>
    </button>

    <style>
      @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap');

      /* Global theme styles */
      :global(:root) {
        --bg-color: #000;
        --text-color: #fff;
        --border-color: #333;
        --card-bg: rgba(255, 255, 255, 0.1);
        --card-border: rgba(255, 255, 255, 0.2);
        --hover-color: #ccc;
        --input-bg: #000;
        --input-border: #fff;
        --form-submit-bg: #313131;
        --form-submit-border: #414141;
        --form-label-color: #717171;
        --footer-bg: #111;
        --project-desc-color: #aaa;
      }

      :global([data-theme="light"]) {
        --bg-color: #fff;
        --text-color: #000;
        --border-color: #ccc;
        --card-bg: rgba(0, 0, 0, 0.1);
        --card-border: rgba(0, 0, 0, 0.2);
        --hover-color: #555;
        --input-bg: #fff;
        --input-border: #000;
        --form-submit-bg: #e0e0e0;
        --form-submit-border: #b0b0b0;
        --form-label-color: #555;
        --footer-bg: #f5f5f5;
        --project-desc-color: #666;
      }

      :global(body) {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: 'JetBrains Mono', monospace;
        margin: 0;
        padding:0;
        transition: all 0.3s ease;
      }

      /* Theme toggle styles */
      .theme-toggle {
        position: fixed;
        bottom: 15px;
        right: 15px;
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 1000;
        transition: background 0.3s, border 0.3s;
      }

      .theme-toggle:hover {
        background: var(--hover-color);
        border-color: var(--hover-color);
      }

      .theme-toggle svg {
        width: 20px;
        height: 20px;
        fill: var(--text-color);
      }

      .theme-toggle .moon-icon {
        display: block;
      }
      .theme-toggle .sun-icon {
        display: none;
      }
      :global([data-theme="light"]) .theme-toggle .moon-icon {
        display: none;
      }
      :global([data-theme="light"]) .theme-toggle .sun-icon {
        display: block;
      }
    </style>

    <script type="module">
      document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.querySelector('.theme-toggle');
        if (!themeToggle) {
          console.error('Theme toggle button not found');
          return;
        }
        const setTheme = (theme) => {
          console.log(`Setting theme to: ${theme}`);
          document.documentElement.setAttribute('data-theme', theme);
          localStorage.setItem('theme', theme);
        };
        const savedTheme = localStorage.getItem('theme') || 'dark';
        setTheme(savedTheme);
        themeToggle.addEventListener('click', () => {
          console.log('Theme toggle clicked');
          const currentTheme = document.documentElement.getAttribute('data-theme');
          const newTheme = currentTheme === 'light' ? 'dark' : 'light';
          setTheme(newTheme);
        });
      });
    </script>
  </body>
</html>