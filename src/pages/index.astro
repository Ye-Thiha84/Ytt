---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="YTT">
  <style>
    @import url("https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap");

    .hire-form-container {
      width: 100%;
      max-width: 400px;
      background: var(--bg-color);
      border: 2px solid var(--text-color);
      padding: 24px 16px;
      font-size: 14px;
      font-family: "JetBrains Mono", monospace;
      color: var(--text-color);
      display: none;
      flex-direction: column;
      gap: 15px;
      box-sizing: border-box;
      border-radius: 12px;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 1000;
    }

    .hire-form-container.active {
      display: flex;
    }

    .hire-form-container button:active {
      scale: 0.95;
    }

    .hire-form-container .hire-form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .hire-form-container .hire-form-group {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }

    .hire-form-container .hire-form-group label {
      display: block;
      margin-bottom: 5px;
      color: var(--form-label-color);
      font-weight: 600;
      font-size: 12px;
    }

    .hire-form-container .hire-form-group input {
      width: 100%;
      padding: 10px 12px;
      border-radius: 8px;
      color: var(--text-color);
      font-family: inherit;
      background-color: var(--input-bg);
      border: 1px solid var(--input-border);
      box-sizing: border-box;
    }

    .hire-form-container .hire-form-group textarea {
      width: 100%;
      padding: 10px 12px;
      border-radius: 8px;
      resize: none;
      color: var(--text-color);
      height: 80px;
      border: 1px solid var(--input-border);
      background-color: var(--input-bg);
      font-family: inherit;
      box-sizing: border-box;
    }

    .hire-form-container .hire-form-group input::placeholder {
      opacity: 0.5;
    }

    .hire-form-container .hire-form-group input:focus {
      outline: none;
      border-color: var(--bg-color);
    }

    .hire-form-container .hire-form-group textarea:focus {
      outline: none;
      border-color: var(--bg-color);
    }

    .hire-form-container .hire-form-submit-btn {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      align-self: flex-start;
      font-family: inherit;
      color: var(--form-label-color);
      font-weight: 600;
      width: 40%;
      background: var(--form-submit-bg);
      border: 1px solid var(--form-submit-border);
      padding: 10px 12px;
      font-size: inherit;
      gap: 8px;
      margin-top: 8px;
      cursor: pointer;
      border-radius: 6px;
    }

    .hire-form-container .hire-form-submit-btn:hover {
      background-color: var(--text-color);
      border-color: var(--text-color);
      color: var(--bg-color);
    }

    .hero {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 50vh;
      text-align: center;
      padding: 1.5rem;
    }

    .hero h1 {
      font-size: 2rem;
      margin: 0;
    }

    .projects {
      padding: 2rem 1rem;
      text-align: center;
    }

    .projects h2 {
      font-size: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .project-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin: 0 auto;
    }

    .project-card {
      background: var(--card-bg);
      backdrop-filter: blur(10px);
      border-radius: 10px;
      padding: 1rem;
      text-align: left;
      border: 1px solid var(--card-border);
      transition: transform 0.3s;
    }

    .project-card:hover {
      transform: translateY(-5px);
    }

    .project-card h3 {
      font-size: 1.2rem;
      margin: 0 0 0.8rem;
    }

    .project-card p {
      font-size: 0.9rem;
      color: var(--project-desc-color);
      margin: 0 0 0.8rem;
    }

    .project-card a {
      color: var(--text-color);
      text-decoration: none;
      font-size: 0.8rem;
      text-transform: uppercase;
    }

    .project-card a:hover {
      color: var(--hover-color);
    }

    footer {
      background: var(--footer-bg);
      padding: 2rem 1rem;
      text-align: center;
      width: 100%;
      box-sizing: border-box;
    }

    footer h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .social-icons {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .social-icons a {
      color: var(--text-color);
      font-size: 1.2rem;
      text-decoration: none;
    }

    .social-icons a:hover {
      color: var(--hover-color);
    }

    footer p.email {
      font-size: 0.9rem;
      color: var(--project-desc-color);
      margin: 1rem 0;
    }

    footer blockquote {
      font-size: 1rem;
      color: var(--hover-color);
      max-width: 100%;
      margin: 1rem auto;
      font-style: italic;
    }

    .start-btn {
      background-color: var(--bg-color);
      color: var(--text-color);
      padding: 0.5rem 1rem;
      border: 1px solid var(--text-color);
      border-radius: 5px;
      font-family: "JetBrains Mono", monospace;
      font-size: 0.9rem;
      cursor: pointer;
      text-transform: uppercase;
      text-decoration: none;
      display: inline-block;
      margin-top: 1rem;
    }

    .start-btn:hover {
      background-color: var(--text-color);
      color: var(--bg-color);
      border: 1px solid var(--bg-color);
    }

    .theme-toggle {
      position: fixed;
      bottom: 15px;
      right: 15px;
      background: var(--card-bg);
      border: 1px solid var(--card-border);
      border-radius: 50%;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 1000;
      transition:
        background 0.3s,
        border 0.3s;
    }

    .theme-toggle:hover {
      background: var(--hover-color);
      border-color: var(--hover-color);
    }

    .theme-toggle svg {
      width: 20px;
      height: 20px;
      fill: var(--text-color);
    }

    .theme-toggle .moon-icon {
      display: block; /* Show moon icon by default (dark mode) */
    }
    .theme-toggle .sun-icon {
      display: none; /* Hide sun icon by default (dark mode) */
    }
    [data-theme="light"] .theme-toggle .moon-icon {
      display: none; /* Hide moon icon in light mode */
    }
    [data-theme="light"] .theme-toggle .sun-icon {
      display: block; /* Show sun icon in light mode */
    }

    @media (min-width: 768px) {
      .hire-form-container {
        width: 450px;
        padding: 32px 24px;
        gap: 20px;
        border-radius: 16px;
      }

      .hire-form-container .hire-form {
        gap: 20px;
      }

      .hire-form-container .hire-form-group input {
        padding: 12px 16px;
      }

      .hire-form-container .hire-form-group textarea {
        padding: 12px 16px;
        height: 96px;
      }

      .hire-form-container .hire-form-submit-btn {
        padding: 12px 16px;
      }

      .hero {
        min-height: 60vh;
        padding: 2rem;
      }

      .hero h1 {
        font-size: 3rem;
      }

      .projects {
        padding: 4rem 2rem;
      }

      .projects h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
      }

      .project-grid {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
      }

      .project-card {
        padding: 1.5rem;
      }

      .project-card h3 {
        font-size: 1.5rem;
        margin: 0 0 1rem;
      }

      .project-card p {
        font-size: 1rem;
        margin: 0 0 1rem;
      }

      .project-card a {
        font-size: 0.9rem;
      }

      footer {
        padding: 4rem 2rem;
      }

      footer h2 {
        font-size: 2rem;
      }

      .social-icons {
        gap: 1.5rem;
      }

      .social-icons a {
        font-size: 1.5rem;
      }

      footer p.email {
        font-size: 1rem;
      }

      footer blockquote {
        font-size: 1.1rem;
        max-width: 600px;
      }

      .start-btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
      }

      .theme-toggle {
        bottom: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
      }

      .theme-toggle svg {
        width: 24px;
        height: 24px;
      }
    }
  </style>

