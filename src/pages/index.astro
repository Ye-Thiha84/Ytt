      <div class="hire-form-group">
        <label for="textarea">How Can We Help You?</label>
        <textarea name="message" id="textarea" rows="10" cols="50" required></textarea>
      </div>
      <button class="hire-form-submit-btn" type="submit" id="submitBtn">Submit</button>
    </form>
  </div>

  <section class="hero">
