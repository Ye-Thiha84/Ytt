---
import Layout from '../layouts/Layout.astro';
---

<Layout title="YTT">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap');

    body {
      background-color: #000;
      color: #fff;
      font-family: 'JetBrains Mono', monospace;
      margin: 0;
      padding: 0;
    }
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem 2rem;
      border-bottom: 1px solid #333;
    }
    .nav-left {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .y-icon {
      width: 24px;
      height: 24px;
      fill: #fff;
    }
    nav a {
      color: #fff;
      text-decoration: none;
      margin: 0 1rem;
      font-size: 1rem;
      text-transform: uppercase;
    }
    nav a:hover {
      color: #ccc;
    }
    .custom-hire-btn {
      position: relative;
      height: 50px;
      padding: 0 30px;
      border: 2px solid #fff;
      background: #000;
      user-select: none;
      white-space: nowrap;
      transition: all .05s linear;
      font-family: 'JetBrains Mono', monospace;
      color: #fff;
    }
    .custom-hire-btn:before, .custom-hire-btn:after {
      content: "";
      position: absolute;
      background: #000;
      transition: all .2s linear;
    }
    .custom-hire-btn:before {
      width: calc(100% + 6px);
      height: calc(100% - 16px);
      top: 8px;
      left: -3px;
    }
    .custom-hire-btn:after {
      width: calc(100% - 16px);
      height: calc(100% + 6px);
      top: -3px;
      left: 8px;
    }
    .custom-hire-btn:hover {
      cursor: crosshair;
    }
    .custom-hire-btn:active {
      transform: scale(0.95);
    }
    .custom-hire-btn:hover:before {
      height: calc(100% - 32px);
      top: 16px;
    }
    .custom-hire-btn:hover:after {
      width: calc(100% - 32px);
      left: 16px;
    }
    .custom-hire-btn span {
      font-size: 15px;
      z-index: 3;
      position: relative;
      font-weight: 600;
      text-transform: uppercase;
    }
    .hire-form-container {
      width: 450px;
      background: #000000;
      border: 2px solid #ffffff;
      padding: 32px 24px;
      font-size: 14px;
      font-family: 'JetBrains Mono', monospace;
      color: white;
      display: none;
      flex-direction: column;
      gap: 20px;
      box-sizing: border-box;
      border-radius: 16px;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 1000;
    }
    .hire-form-container.active {
      display: flex;
    }
    .hire-form-container button:active {
      scale: 0.95;
    }
    .hire-form-container .hire-form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .hire-form-container .hire-form-group {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }
    .hire-form-container .hire-form-group label {
      display: block;
      margin-bottom: 5px;
      color: #717171;
      font-weight: 600;
      font-size: 12px;
    }
    .hire-form-container .hire-form-group input {
      width: 90%;
      padding: 12px 16px;
      border-radius: 8px;
      color: #fff;
      font-family: inherit;
      background-color: #000000;
      border: 1px solid #ffffff;
      box-sizing: border-box;
    }
    .hire-form-container .hire-form-group textarea {
      width: 90%;
      padding: 12px 16px;
      border-radius: 8px;
      resize: none;
      color: #fff;
      height: 96px;
      border: 1px solid #ffffff;
      background-color: #000000;
      font-family: inherit;
      box-sizing: border-box;
    }
    .hire-form-container .hire-form-group input::placeholder {
      opacity: 0.5;
    }
    .hire-form-container .hire-form-group input:focus {
      outline: none;
      border-color: #e81cff;
    }
    .hire-form-container .hire-form-group textarea:focus {
      outline: none;
      border-color: #e81cff;
    }
    .hire-form-container .hire-form-submit-btn {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      align-self: flex-start;
      font-family: inherit;
      color: #717171;
      font-weight: 600;
      width: 40%;
      background: #313131;
      border: 1px solid #414141;
      padding: 12px 16px;
      font-size: inherit;
      gap: 8px;
      margin-top: 8px;
      cursor: pointer;
      border-radius: 6px;
    }
    .hire-form-container .hire-form-submit-btn:hover {
      background-color: #fff;
      border-color: #fff;
      color: #000;
    }
    .hero {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 60vh;
      text-align: center;
      padding: 2rem;
    }
    .hero h1 {
      font-size: 3rem;
      margin: 0;
    }
    .projects {
      padding: 4rem 2rem;
      text-align: center;
    }
    .projects h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    .project-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .project-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 10px;
      padding: 1.5rem;
      text-align: left;
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: transform 0.3s;
    }
    .project-card:hover {
      transform: translateY(-5px);
    }
    .project-card h3 {
      font-size: 1.5rem;
      margin: 0 0 1rem;
    }
    .project-card p {
      font-size: 1rem;
      color: #aaa;
      margin: 0 0 1rem;
    }
    .project-card a {
      color: #fff;
      text-decoration: none;
      font-size: 0.9rem;
      text-transform: uppercase;
    }
    .project-card a:hover {
      color: #ccc;
    }
    footer {
      background: #111;
      padding: 4rem 2rem;
      text-align: center;
    }
    footer h2 {
      font-size: 2rem;
      margin-bottom: 1rem;
    }
    .social-icons {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-bottom: 1rem;
    }
    .social-icons a {
      color: #fff;
      font-size: 1.5rem;
      text-decoration: none;
    }
    .social-icons a:hover {
      color: #ccc;
    }
    footer p.email {
      font-size: 1rem;
      color: #aaa;
      margin: 1rem 0;
    }
    footer blockquote {
      font-size: 1.1rem;
      color: #ccc;
      max-width: 600px;
      margin: 1rem auto;
      font-style: italic;
    }
    .start-btn {
      background-color: #000;
      color: #fff;
      padding: 0.75rem 1.5rem;
      border: 1px solid #fff;
      border-radius: 5px;
      font-family: 'JetBrains Mono', monospace;
      font-size: 1rem;
      cursor: pointer;
      text-transform: uppercase;
      text-decoration: none;
      display: inline-block;
      margin-top: 1rem;
    }
    .start-btn:hover {
      background-color: #fff;
      color: #000;
      border: 1px solid #000;
    }
  </style>

